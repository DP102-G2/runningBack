<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_margin="6dp"
    android:background="@drawable/sreach_style"
    android:padding="6dp"
    card_view:cardBackgroundColor="#FFFFFF"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="6dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tsproduct_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:gravity="center|left"
            android:textSize="18sp"
            card_view:layout_constraintBaseline_toBaselineOf="@+id/tsproduct_name"
            card_view:layout_constraintEnd_toStartOf="@+id/tsproduct_name"
            card_view:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tsproduct_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18sp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toStartOf="@+id/tstreatment_status"
            card_view:layout_constraintStart_toEndOf="@+id/tsproduct_number"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tstreatment_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:gravity="center|right"
            android:textSize="18sp"
            card_view:layout_constraintBaseline_toBaselineOf="@+id/tsproduct_name"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/tsproduct_name" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>