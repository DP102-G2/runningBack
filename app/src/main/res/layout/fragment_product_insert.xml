<?xml version="1.0" encoding="utf-8"?>
<ScrollView   xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".prod.ProductInsertFragment">

        <ImageView
            android:id="@+id/ispro_ivMain"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:src="@drawable/pro_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ispro_ivOne"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/pro_image"
            app:layout_constraintStart_toStartOf="@+id/ispro_ivMain"
            app:layout_constraintTop_toBottomOf="@+id/ispro_ivMain" />

        <ImageView
            android:id="@+id/ispro_ivTwo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/pro_image"
            app:layout_constraintEnd_toStartOf="@+id/ispro_ivThree"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/ispro_ivOne"
            app:layout_constraintTop_toBottomOf="@+id/ispro_ivMain" />

        <ImageView
            android:id="@+id/ispro_ivThree"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/pro_image"
            app:layout_constraintEnd_toEndOf="@+id/ispro_ivMain"
            app:layout_constraintTop_toBottomOf="@+id/ispro_ivMain" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="商品編號"
            app:layout_constraintStart_toStartOf="@+id/ispro_ivOne"
            app:layout_constraintTop_toBottomOf="@+id/ispro_ivOne" />

        <EditText
            android:id="@+id/ispro_etProNo"
            style="@style/type_radius"
            android:layout_width="240dp"
            android:layout_height="35dp"
            android:layout_marginTop="16dp"
            android:hint=" 請輸入商品編號"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="＊必填"
            android:textColor="#F44336"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@+id/ispro_etProNo"
            app:layout_constraintTop_toBottomOf="@+id/ispro_etProNo" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="商品類別"
            app:layout_constraintStart_toStartOf="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <AutoCompleteTextView
            android:id="@+id/ispro_etProCat"
            style="@style/type_radius"
            android:layout_width="240dp"
            android:layout_height="35dp"
            android:layout_marginTop="16dp"
            android:completionThreshold="1"
            android:hint="  請輸入商品類別"
            app:layout_constraintStart_toStartOf="@+id/textView10"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="＊必填"
            android:textColor="#F44336"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@+id/ispro_etProCat"
            app:layout_constraintTop_toBottomOf="@+id/ispro_etProCat" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="商品名稱"
            app:layout_constraintStart_toStartOf="@+id/textView12"
            app:layout_constraintTop_toBottomOf="@+id/textView12" />

        <EditText
            android:id="@+id/ispro_etProName"
            style="@style/type_radius"
            android:layout_width="240dp"
            android:layout_height="35dp"
            android:layout_marginTop="16dp"
            android:hint="  請輸入商品名稱"
            app:layout_constraintStart_toStartOf="@+id/textView13"
            app:layout_constraintTop_toBottomOf="@+id/textView13" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="＊必填"
            android:textColor="#F44336"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@+id/ispro_etProName"
            app:layout_constraintTop_toBottomOf="@+id/ispro_etProName" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="商品副標題"
            app:layout_constraintStart_toStartOf="@+id/textView15"
            app:layout_constraintTop_toBottomOf="@+id/textView15" />

        <EditText
            android:id="@+id/ispro_etProDesc"
            style="@style/type_radius"
            android:layout_width="240dp"
            android:layout_height="35dp"
            android:layout_marginTop="16dp"
            android:hint="  請輸入商品副標題"
            app:layout_constraintStart_toStartOf="@+id/textView16"
            app:layout_constraintTop_toBottomOf="@+id/textView16" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="＊必填"
            android:textColor="#F44336"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@+id/ispro_etProDesc"
            app:layout_constraintTop_toBottomOf="@+id/ispro_etProDesc" />

        <Button
            android:id="@+id/ispro_btNextPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/bt_style"
            android:text="下一步"
            app:layout_constraintEnd_toEndOf="@+id/ispro_etProDesc"
            app:layout_constraintStart_toStartOf="@+id/ispro_etProDesc"
            app:layout_constraintTop_toBottomOf="@+id/textView18" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
